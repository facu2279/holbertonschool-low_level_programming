#include "holberton.h"
#include <stdlib.h>
/**
 *alloc_grid - sadf
 *@width: sadfa
 *@heigth: asdf
 */
int **alloc_grid(int width, int height)
{
	int **arr = (int *)malloc(width * height * sizeof(int));
	int i, j;

	for (i = 0; i <  width; i++)
		for (j = 0; j < height; j++)
			*(arr + i*height + j) = 0;
	return (arr);
}
